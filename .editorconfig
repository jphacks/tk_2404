root = true

[*]
charset = utf-8
end_of_line = lf
max_line_length = 120
insert_final_newline = true

[*.py]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 2

[*.yml]

[*.tsv, *.tab]
indent_style = tab
indent_size = 1

[*.js, *.jsx, *.ts, *.tsx]
indent_style = space
indent_size = 2
    
[*.html]
indent_style = space
indent_size = 2

[*.css, *.scss]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = true
insert_final_newline = true
